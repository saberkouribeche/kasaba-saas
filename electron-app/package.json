{
    "name": "kasaba-pos-shell",
    "version": "1.0.0",
    "description": "Desktop wrapper for Kasaba SaaS with Hardware Access",
    "main": "main.js",
    "scripts": {
        "start": "set NODE_ENV=development && electron .",
        "start:prod": "set NODE_ENV=production && electron .",
        "build": "electron-builder",
        "rebuild": "electron-builder install-app-deps",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "serialport": "^12.0.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.kasaba.pos",
        "productName": "Kasaba POS",
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "output": "dist"
        }
    }
}